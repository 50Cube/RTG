<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:id="hBox">
    <Label text="Punkt diagnostyczny: x = "/>
    <TextField fx:id="pointX" prefWidth="50"/>
    <Button fx:id="buttonX" text="Zmień X" >
        <HBox.margin>
            <Insets left="5" right="5" />
        </HBox.margin>
    </Button>
    <Label text=" y = "/>
    <TextField fx:id="pointY" prefWidth="50"/>
    <Button fx:id="buttonY" text="Zmień Y">
        <HBox.margin>
            <Insets left="5" right="5" />
        </HBox.margin>
    </Button>
</HBox>

